@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="detailTop">
        <img class="detailImage" src="~/Content/images/@(Model.Id).jpg" alt="@Model.Id is not a hot dog." />

        <h2>
            @Model.Name
        </h2>
        <p>
            @Model.RecipeType
        </p>
        <p>
            <strong>Cook Time</strong> @Model.CookTimeInMinutes minutes
        </p>
        <p>
            @Model.Description
        </p>
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="detailTextBottom">
        <strong>Ingredients</strong>
        <ul>
            @foreach (var item in Model.Ingredients)
            {
                <li>
                    @item.Quantity @item.Name
                </li>
            }
        </ul>
        <hr />
        <strong>Preparation</strong>
        <ol>
            @foreach (var item in Model.PreparationSteps)
            {
                <li>
                    @item
                </li>
            }
        </ol>
    </div>

</div>